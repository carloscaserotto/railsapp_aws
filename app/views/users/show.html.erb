<h1>User</h1>
<%= link_to 'New user', new_user_path %>
<br>
    <table>
    <tr>
        <th>User</th>
        <th>Email</th>
        <th>Imagen</th>
        <th colspan="3"></th>
    </tr>
        <tr>
        <td><%= @user.username %></td>
        <td><%= @user.email %></td>
        <td>
        <% if @user.imagen.attached? %>
            <%= image_tag @user.imagen, style: 'height:10vw;width:10vw;margin-bottom:20px;' %>
            <%= link_to 'download', rails_blob_path(@user.imagen, disposition: 'attachment') %>
        <% end %>
        </td>
        <td><%= link_to 'Show', user_path(@user) %></td>
        <td><%= link_to 'Edit', edit_user_path(@user) %></td>
        <td><%= link_to 'Destroy', user_path(@user),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </table>

